<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="clr-namespace:RecipeOrganiser.Controls">

	<Style TargetType="{x:Type local:HeaderedToolTip}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type local:HeaderedToolTip}">
					<Border BorderThickness="1" 
							BorderBrush="Gray">
						<StackPanel Background="{x:Static SystemColors.ControlLightLightBrush}">
							<TextBlock Text="{TemplateBinding HeaderText}" FontWeight="Bold" Padding="5"/>
							<TextBlock Text="{TemplateBinding ContentText}" Padding="10,5,10,10" TextWrapping="Wrap" MaxWidth="200"/>
						</StackPanel>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>